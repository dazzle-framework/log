{
    "name": "dazzlesoftware/log",
    "type": "library",
    "description": "Dazzle Log Package",
    "keywords": ["dazzle", "framework", "log"],
    "homepage": "https://github.com/dazzle-framework/log",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^7.3.0",
        "dazzlesoftware/date": "^1.0|^2.0",
        "dazzlesoftware/filesystem": "^1.0|^2.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "dazzlesoftware/dazzle-coding-standard": "^1.0|^2.0",
        "dazzlesoftware/database": "^1.0|^2.0",
        "dazzlesoftware/test": "^1.0|^2.0",
        "phpunit/phpunit": "^9.0",
        "phpunit/dbunit": "~1.3|~2.0"
    },
    "provide": {
        "psr/log-implementation": "^1.0"
    },
    "suggest": {
        "dazzlesoftware/database": "Install dazzlesoftware/database to use the database logger."
    },
    "autoload": {
        "psr-4": {
            "Dazzle\\Log\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dazzle\\Log\\UnitTests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-develop": "2.x-dev"
        }
    }
}
